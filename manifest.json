{
  "manifest_version": 3,
  "name": "Tag Recovery",
  "version": "0.1.0",
  "description": "Retrieve text from DW forms",
  "action": {
    "default_title": "Tag Recovery",
    "default_popup": "index.html",
    "default_icon": {
      "16": "src/assets/icon-16.svg",
      "32": "src/assets/icon-32.svg",
      "48": "src/assets/icon-48.svg",
      "128": "src/assets/icon-128.svg"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": ["https://*.dreamwidth.org/*"],
  "content_scripts": [
    {
      "matches": ["https://*.dreamwidth.org/*"],
      "js": ["src/main.js"],
      "run_at": "document_end"
    }
  ]
}