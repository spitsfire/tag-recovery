{
  "manifest_version": 3,
  "name": "Tag Recovery",
  "version": "0.1.0",
  "description": "Retrieve text from DW forms",
  "action": {
    "default_title": "Tag Recovery",
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/icon-16.svg",
      "32": "assets/icon-32.svg",
      "48": "assets/icon-48.svg",
      "128": "assets/icon-128.svg"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": ["https://*.dreamwidth.org/*"],
  "web_accessible_resorces": [
    {
      "resources":
      [
        "assets/*"
      ],
      "matches": ["https://*.dreamwidth.org/*"]
    }
  ]
}